<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_session_tree_custom" model="ir.ui.view">
        <field name="name">pos.session.tree.custom</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
        <field name="arch" type="xml">
            <!-- Insertamos el botón justo después de abrir la etiqueta <tree> -->
            <xpath expr="//tree/header" position="inside">
                <button name="action_descargar"
                    type="object"
                    class="oe_highlight"
                    string="Descargar Reporte"
                    icon="fa-download"/>
            </xpath>
        </field>
    </record>
</odoo>
